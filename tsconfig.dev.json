{
  "compilerOptions": {
    "outDir": "./dist/dev",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "noImplicitAny": true,
    "sourceRoot": "./",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": false,
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "es6",
    "types": ["babylonjs", "babylonjs-gui", "babylonjs-materials"],
    "noResolve": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "isolatedModules": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
